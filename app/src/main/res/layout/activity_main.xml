<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.pexpa.rejestrator.MainActivity"
    android:screenOrientation="portrait"
    >



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="match_parent"
            app:srcCompat="@drawable/obrazek1"
            android:id="@+id/rozpocznijBadanieButton"
            android:text="ROZPOCZNIJ BADANIE"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/obrazek1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent"
            android:layout_weight="2"


            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:scaleType="fitXY"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:onClick="onClick (MainActivity)" />


        <Button
            android:layout_width="match_parent"
            app:srcCompat="@drawable/obrazek2"
            android:id="@+id/przegladajWynikiButton"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/obrazek2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:text="PRZEGLÄ„DAJ WYNIKI"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:onClick="goToPrzegladajWyniki" />

        <Button
            android:layout_width="match_parent"
            app:srcCompat="@drawable/obrazek3"
            android:id="@+id/ustawieniaButton"
            android:textColor="@color/light_font"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/obrazek3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:text="USTAWIENIA"
            android:textSize="24sp"
            android:textStyle="normal|bold" />


    </LinearLayout>

</RelativeLayout>
