<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rejestracja"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pexpa.rejestrator.TherapyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="1">


        <Button
            android:text="Kliknij, aby dodać zdarzenie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dodaj_zdarzenie_button"
            android:layout_weight="0.90"
            />


        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokazKlikniecia"
                android:layout_weight="1" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokazCzas"
                android:layout_weight="1" />
        </LinearLayout>
        <Button
            android:text="Zakończ badanie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zakoncz_badanie_button" />
    </LinearLayout>


</LinearLayout>

