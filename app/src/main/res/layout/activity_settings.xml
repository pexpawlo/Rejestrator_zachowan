<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ustawienia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    tools:context="com.example.pexpa.rejestrator.SettingsActivity">
    <Button
        android:text="Zarządzaj pacjentami"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_settings_btn_edit_patients"
        android:layout_weight="1"
        />

    <Button
        android:text="Usuń terapię"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_settings_btn_delete_therapies"
        android:layout_weight="1" />

    <Button
        android:text="inne przyciski na pozniej"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_weight="10"
        />
</LinearLayout>
