<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:padding="6dip"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="75dp">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/row_therapy_rb_checked"
        android:layout_alignBottom="@+id/row_therapy_tv_date_end"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/row_therapy_tv_date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/row_therapy_rb_checked"
        android:layout_alignBottom="@+id/row_therapy_rb_checked"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
